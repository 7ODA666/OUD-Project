@model OUD_Perfume_Project.Models.ViewModel.LoginUserVM


@{
    Layout = null;
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In</title>
    <link rel="icon" href="/Images/LogoWebsite.ico" type="image/x-icon" />
    <link rel="stylesheet" href="/Style/Sign.css" />
    <link rel="stylesheet" href="/Style/animate.css" />
    <script src="/Script/wow.js"></script>
    <script>
        new WOW().init();
    </script>
</head>

<body>
    <!--! Form Login-->
    <div class="form-login wow flipInX"
         data-wow-duration="1.6s"
         id="form-login">

        <div class="login">

            <div class="cont">

                <div class="left">

                    <a href="@Url.Action("Index","Home")">
                        <img src="/Images/logoremovedarck.png"
                             alt="logooo"
                             class="logoo-im" />
                    </a>

                    <img src="~/Images/loginLogo.png"
                         alt="Perfume Bottle"
                         class="perfume-image" />
                </div>

                <div class="right">
                    @Html.ActionLink("×", "Index", "Home", new { area = "" }, new { @class = "close" })

                    <h2>Login</h2>
                    <p>Welcome back, legend — your scent journey starts here</p>



                    @using (Html.BeginForm("Login", "UserAccount", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.TextBoxFor(m => m.Email, new { @class = "input-email input-text", placeholder = "Email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                        @Html.PasswordFor(m => m.Password, new { @class = "input-password input-text", placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                        <button type="submit">Login</button>
                    }

                    <p>Don’t have account? @Html.ActionLink("Register", "Register", "UserAccount")</p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}